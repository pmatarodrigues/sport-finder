<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rectangle"
    tools:context=".ActivityAddPlace">

    <RelativeLayout
        android:id="@+id/relativeAddPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_rectangle_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"

            >

            <EditText
                android:drawableStart="@drawable/ic_icon_search2"
                android:paddingLeft="10dp"
                android:id="@+id/et_pesquisarDesportos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rectangle_search"
                android:elevation="20dp"
                android:hint="@string/search_hint"
                android:layout_marginHorizontal="20dp"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rectangle_search"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="80dp"
                android:isScrollContainer="false"
                android:fillViewport="true"
                >

                <LinearLayout
                    android:id="@+id/scrollSportsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_listaDesporto"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="10dp"
                        >
                    </ListView>
                </LinearLayout>

            </ScrollView>
            <Button
                android:id="@+id/button_continuar"
                android:text="@string/text_continue"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_button_confirm"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
